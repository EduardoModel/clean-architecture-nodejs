{
  "name": "clean-architecture-nodejs",
  "version": "1.0.0",
  "main": "src/main/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/main",
    "dev": "nodemon src/server.ts",
    "build": "sucrase ./src -d ./dist --transforms typescript,imports",
    "prepare": "husky install",
    "test": "jest --colors --passWithNoTests",
    "pretest:unit": "NODE_ENV=test sequelize db:migrate",
    "test:unit": "NODE_ENV=test yarn test --watch --runInBand --detectOpenHandles -c jest-unit-config.ts",
    "posttest:unit": "NODE_ENV=test sequelize db:migrate:undo:all",
    "test:integration": "yarn test --watch -c jest-integration-config.ts",
    "pretest:staged": "NODE_ENV=test sequelize db:migrate",
    "test:staged": "NODE_ENV=test yarn test --findRelatedTests",
    "posttest:staged": "NODE_ENV=test sequelize db:migrate:undo:all",
    "pretest:ci": "NODE_ENV=test sequelize db:migrate",
    "test:ci": "NODE_ENV=test yarn test --coverage",
    "posttest:ci": "NODE_ENV=test sequelize db:migrate:undo:all"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/sequelize": "^4.28.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-jest": "^27.4.6",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "sequelize-cli": "^6.4.1",
    "sucrase": "^3.20.3",
    "supertest": "^6.2.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "fast-glob": "^3.2.11",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.13",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.15.0",
    "validator": "^13.7.0"
  }
}
